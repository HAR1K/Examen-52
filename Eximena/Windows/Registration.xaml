<Window x:Class="Eximena.Windows.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eximena.Windows"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="161*"/>
            <RowDefinition Height="36*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="245*"/>
            <ColumnDefinition Width="304*"/>
            <ColumnDefinition Width="251*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Content="Зарегистрироваться" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" RenderTransformOrigin="0.303,0.597" Height="32" Width="204" Click="Button_Click"/>
        <TextBox Name="firstname" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="Фамилия" VerticalAlignment="Center" Width="120" Height="18"/>
        <TextBox Name="password" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Center" Width="120" Height="18"/>
        <Button Content="Перейти на регистрацию персонала" HorizontalAlignment="Center" VerticalAlignment="Center" Width="226" Height="19" Click="Button_Click_1"/>
        <Button Grid.Column="2" Content="Перейти на логин" HorizontalAlignment="Center" VerticalAlignment="Center" Width="165" Click="Button_Click_2"/>

    </Grid>
</Window>
