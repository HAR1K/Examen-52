<Window x:Class="Eximena.Windows.Interfase.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eximena.Windows.Interfase"
        mc:Ignorable="d"
        Title="Admin" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="401*"/>
            <ColumnDefinition Width="399*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.ColumnSpan="1">
            <ListView Name="list">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <TextBox Text="{Binding NameOrder}" FontSize="16" FontWeight="Bold" Margin="5"/>
                            <TextBox Text="{Binding Master}" FontSize="14" Margin="5"/>
                            <TextBox Text="{Binding Status}" FontSize="14" Margin="5"/>
                            <Button Content="Изменить статус" Tag="{Binding}" FontSize="14" Margin="5" Click="Button_Click"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
        <Button Grid.Column="1" Content="Добавить запись" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="30" Width="149" Click="Button_Click_1"/>
    </Grid>
</Window>
