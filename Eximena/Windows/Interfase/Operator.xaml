<Window x:Class="Eximena.Windows.Interfase.Operator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eximena.Windows.Interfase"
        mc:Ignorable="d"
        Title="Operator" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="81*"/>
            <RowDefinition Height="55*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="254*"/>
            <ColumnDefinition Width="254*"/>
            <ColumnDefinition Width="254*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Content="Записать заявку!" HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Center" Width="120" Click="Button_Click"/>
        <ComboBox Name="cmbxPersonnel" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Width="120"/>
        <TextBox Name="name" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="Название заявки" VerticalAlignment="Center" Width="120"/>
        <TextBox Name="master" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="3" TextWrapping="Wrap" Text="Мастер" VerticalAlignment="Center" Width="120"/>
        <TextBox Name="status" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="4" TextWrapping="Wrap" Text="Статус" VerticalAlignment="Center" Width="120"/>

    </Grid>
</Window>
