<Window x:Class="Eximena.Windows.Interfase.Technik"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eximena.Windows.Interfase"
        mc:Ignorable="d"
        Title="Technik" Height="450" Width="800">
    <Grid>
        <ScrollViewer>
            <ListView Name="list">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding NameOrder}" FontSize="16" FontWeight="Bold" Margin="5"/>
                            <TextBlock Text="{Binding Master}" FontSize="14" Margin="5"/>
                            <TextBox Text="{Binding Status}" FontSize="14" Margin="5"/>
                            <Button Content="Изменить статус" Tag="{Binding}" FontSize="14" Margin="5" Click="Button_Click"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Window>
